{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*"]
    },
    "outDir": "dist",  
    "rootDir": "src",
    "target": "es2016",
    "module": "Node16", 
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "es2015.promise",
      "es5"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}